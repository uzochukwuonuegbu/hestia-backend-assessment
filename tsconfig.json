{
    "compilerOptions": {
      "allowJs": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "declaration":true,
      "target": "es2020",
      "module": "commonjs",
      "resolveJsonModule": true,
      "downlevelIteration": true,
      "lib": ["es2020", "esnext.asynciterable"],
      "jsx": "react",
      "sourceMap": true,
      "outDir": "./dist/",
      "rootDirs": ["./src/","./services/checkout/src"],
      "removeComments": false,
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "moduleResolution": "node",
      "typeRoots": ["./node_modules/@types","./types.d"],
      "allowSyntheticDefaultImports":true,
      "types": ["node","jest"],
      "baseUrl": ".",
      "paths": {
        "api/*": ["src/_httpHandler/api/*"],
        "core/*": ["src/_core/*"],
        "models/*": ["src/_models/*"],
        "repositories/*": ["src/_repositories/*"],
        "types/*": ["src/_types/*"],
        "lib/*": ["src/_lib/*"],
        "test/*": ["src/testsetup/*"],
        "pd/*": ["src/*"]
      }
    },
    "include": [ "src/**/*","types.d/**/*"],
    "strictPropertyInitialization": false
  }
  